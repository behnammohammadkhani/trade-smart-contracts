{
  "name": "swarm-smart-contracts",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "git@github.com:Altoros/swarm-smart-contracts.git",
  "author": "Protofire",
  "license": "MIT",
  "devDependencies": {
    "@chainlink/contracts": "^0.0.12",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "3.3.0-solc-0.7",
    "@openzeppelin/contracts-upgradeable": "3.3.0-solc-0.7",
    "@openzeppelin/hardhat-upgrades": "^1.6.0",
    "@typechain/ethers-v5": "^5.0.0",
    "@types/chai": "^4.2.14",
    "@types/contract-proxy-kit": "^1.0.1",
    "@types/fs-extra": "^9.0.6",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.20",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "chai": "^4.2.0",
    "contract-proxy-kit": "^1.1.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "ethereum-waffle": "^3.2.1",
    "ethers": "^5.0.25",
    "fs-extra": "^9.0.1",
    "hardhat": "^2.0.7",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.4",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "ora": "^5.3.0",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.3",
    "shelljs": "^0.8.4",
    "sol2uml": "^1.1.25",
    "solc": "^0.8.0",
    "solc-0.7": "npm:solc@^0.7.0",
    "solhint": "^3.3.2",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.13",
    "solidity-docgen": "^0.5.11",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.1",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier:list-different",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:sol:fix": "yarn lint:sol --fix",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "lint:ts:fix": "yarn lint:ts --fix",
    "prettier:sol": "prettier --config .prettierrc --write \"contracts/**/*.sol\"",
    "prettier:ts": "prettier --config .prettierrc --write \"**/*.{js,ts}\"",
    "prettier:json:md": "prettier --config .prettierrc --write \"**/*.{json,md}\"",
    "prettier": "yarn prettier:sol && yarn prettier:ts",
    "prettier:list-different": "prettier --config .prettierrc --list-different \"**/*.{js,sol,ts}\"",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "typechain": "hardhat typechain",
    "doc:uml": "sol2uml ./contracts -i mocks,test -f png -o ./docs/uml/swarm-markets.png",
    "docify": "node docify.js",
    "deploy:kovan": "hardhat run --network kovan scripts/deploy.ts",
    "verify:kovan": "hardhat run --network kovan scripts/verify.ts",
    "data:kovan": "hardhat run --network kovan scripts/testnet-data.ts",
    "deploy:rinkeby": "hardhat run --network rinkeby scripts/deploy.ts",
    "verify:rinkeby": "hardhat run --network rinkeby scripts/verify.ts",
    "size": "hardhat size-contracts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "contracts/**/*.sol": [
      "yarn prettier:sol",
      "yarn lint:sol:fix"
    ],
    "**/*.{js,ts}": [
      "yarn prettier:ts",
      "yarn lint:ts:fix"
    ]
  }
}
